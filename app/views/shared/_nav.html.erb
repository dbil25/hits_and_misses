<% if current_user %>
  <div class="flex justify-between drop-shadow p-2" style="background-color: #ef914c;">
    <%= link_to root_path do %>
      <%= image_tag "logo.png", class: "h-16"%>
    <% end %>
    <div class="flex flex-col items-end">
      signed in as <%= current_user.username %>
      <%= button_to destroy_user_session_path, method: :delete, class: "bg-gradient-to-l from-orange-400 to-orange-500 p-2 rounded-lg drop-shadow text-slate-100" do %>
        Sign out
      <% end %>
    </div>
  </div>
<% end %>